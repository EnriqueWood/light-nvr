# config.env
export LAYOUT=a1  # Refers to the layout file ~/.light-nvr/layouts/a1.layout
export LOGS_FOLDER=/tmp/cam-monitor/logs
export LOG_RETENTION_DAYS=7  # Number of days to keep log files (set to 0 to disable cleanup)
export SCREEN_TOP=0
export SCREEN_LEFT=0
export BASE_SCREEN_WIDTH=1280
export BASE_SCREEN_HEIGHT=720
export CONNECTION_HEALTHCHECK_SECONDS=3
export STREAM_OPTS="--no-audio --no-border --vo=x11 --profile=low-latency --untimed --no-correct-pts --speed=1.0 --no-cache --framedrop=decoder+vo --loop-playlist=force"
export RECORD_PATH=/path/to/recordings
export RECORD_SEGMENT_SECONDS=600  # Duration in seconds for each recording segment (default: 600 = 10 minutes)
export RECORD_MAX_SIZE_MB=10240  # Maximum total recording size in MB (will delete oldest files when exceeded). Optional, leave unset for no limit.
export RECORD_QUOTA_CHECK_SECONDS=60  # How often to check if quota is exceeded (default: 10 seconds)
export RECORD_USE_RAM_BUFFER=true  # Use RAM buffer (/dev/shm) for recording before writing to disk (requires at least 2GB free RAM)
export RECORD_RAM_BUFFER_SIZE_MB=512  # Size of RAM buffer per stream in MB (default: 512). Note: /dev/shm size may be limited on some systems

# Stream configuration with optional names (format: URL###Name)
# Names make logs more readable and improve security by hiding credentials from ps output
# If no name is provided, the IP address will be used as the stream name
# IMPORTANT: All stream names must be unique
export STREAM_CONNECTION_STREAMS=(\
    "rtsp://thestream1user:thestream1password@192.168.1.1:554/user=thestream1user_password=thestream1password_channel=1_stream=1.sdp?real_stream###Front door camera" \
    "rtsp://thestream2user:thestream2password@192.168.1.34###Backyard" \
    "rtsp://thestream3user:thestream3password@192.168.1.171###Garage entrance" \
    "rtsp://thestream4user:thestream4password@192.168.1.138")

